@section Scripts
{
    <script type="text/javascript">

        new Vue({
            el: '#permissoes-list',
            data() {
                return {
                    permissoes: {},
                    errors: {}
                };
            },

            methods: {

                listar(id) {

                    api.get('perfil/getPermissoes/' + id, true)
                        .then(({ data, errors }) => {
                            this.errors = errors || {};
                            if (errors) {
                                return;
                            }
                            this.permissoes = data;
                        });

                },


            },
            mounted() {

                const id = this.getId();

                if (id) {
                    this.listar();
                }
                
            }
        });

    </script>
}