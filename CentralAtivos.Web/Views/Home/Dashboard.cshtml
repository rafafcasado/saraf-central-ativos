@section Scripts
{
    <script type="text/javascript">

        new Vue({
            el: '#dashboard',
            data() {
                return {
                    usuario: {},
                    errors: {}
                };
            },

            methods: {

                getUsuario() {

                    api.get('helpers/getUsuarioLogado', true)
                        .then(({ data, errors }) => {
                            this.errors = errors || {};
                            if (errors) {
                                return;
                            }
                            this.usuario = data;
                        });

                }

            },
            mounted() {

                this.getUsuario();
            }
        });

    </script>
}