                                    html: 'Você não tem acesso à essa funcionalidade.</br>Entre em contato com o Administrador do Sistema',
                                    showConfirmButton: false,
                                    timer: 5000,
                                    onClose: () => {

                                        history.go('-1');
                                    }
                                });
                            }
                            else {

                                self.empresaID = localStorage.getItem('empresaID');
